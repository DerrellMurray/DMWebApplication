<section class="row  text-center align-items-center js-fullheight" style="position:relative ">
    <div class="js-fullheight content">

        <div class="justify-content-center align-items-center">
            <div class="col-md-12 justify-content-center " style="padding:55px;">
                <img src="~/Content/DSC_0053.jpg" alt="Random Name" class="img-circle" style="width:200px; height:260px;">
                <div class="container text-center" style="max-width:625px;">
                    <h3>Hello I'm</h3>
                    <h1><strong>Derrell Murray</strong></h1>
