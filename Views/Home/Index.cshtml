<script src="~/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
<script language="javascript">

    var fullHeight = function () {
        $('.js-fullheight').css('height', $(window).height());
        $(window).resize(function () {
            $('.js-fullheight').css('height', $(window).height());
        });

    };
    fullHeight();
